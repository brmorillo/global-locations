{
  "name": "@brmorillo/global-locations",
  "version": "4.0.3",
  "description": "Public API for global locations",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "fix": "bun run lint && bun run format",
    "prepare": "husky install",
    "release": "standard-version",
    "commit": "cz",
    "version:bump": "standard-version && git push --follow-tags origin main",
    "prepub": "bun run fix",
    "pub": "bun run prepub && bun run build && bun run version:bump && npm publish --access public"
  },
  "keywords": [
    "global-locations",
    "countries",
    "states",
    "cities",
    "typescript",
    "utility"
  ],
  "author": "Bruno Morillo <bruno@rmorillo.com> (https://github.com/brmorillo)",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@brmorillo/utils": "^12.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "standard-version": "^9.5.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brmorillo/global-locations.git"
  }
}
